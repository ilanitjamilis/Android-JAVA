<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a42102869.tp_2.ActividadPrincipal">


    <Button
        android:id="@+id/btnJuegoNormal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:onClick="irJuegoNormal"
        android:text="Modo normal"
        android:textSize="40dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnJuegoAzar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:onClick="irJuegoAzar"
        android:text="Modo azar"
        android:textSize="40dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnGanaPorMi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:onClick="irGanaPorMi"
        android:text="Gana por mi"
        android:textSize="40dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"/>


</LinearLayout>