<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a42102869.tp_2.ActividadPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFoto1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="1dp"
            android:background="#000000"
            android:onClick="apretoBtn"
            android:scaleType="centerCrop"
            android:tag="0" />

        <ImageButton
            android:id="@+id/btnFoto2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="1dp"
            android:background="#000000"
            android:onClick="apretoBtn"
            android:scaleType="centerCrop"
            android:tag="1" />

        <ImageButton
            android:id="@+id/btnFoto3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="apretoBtn"
            android:scaleType="centerCrop"
            android:tag="2"
            android:layout_margin="1dp"
            android:background="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="110dp">

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnFoto4"
            android:onClick="apretoBtn"
            android:tag="3"
            android:layout_margin="1dp"
            android:background="#000000"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnFoto5"
            android:onClick="apretoBtn"
            android:tag="4"
            android:layout_margin="1dp"
            android:background="#000000"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnFoto6"
            android:onClick="apretoBtn"
            android:tag="5"
            android:layout_margin="1dp"
            android:background="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="110dp">

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnFoto7"
            android:onClick="apretoBtn"
            android:tag="6"
            android:layout_margin="1dp"
            android:background="#000000"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnFoto8"
            android:onClick="apretoBtn"
            android:tag="7"
            android:layout_margin="1dp"
            android:background="#000000"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:id="@+id/btnFoto9"
            android:onClick="apretoBtn"
            android:tag="8"
            android:layout_margin="1dp"
            android:background="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugador: "
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text="XXX"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:id="@+id/nombreJugador"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Movimientos: "
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/movimientosUtilizados"/>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="6dp"
        android:onClick="irPantallaPrincipal"
        android:text="Salir del juego"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"/>


</LinearLayout>