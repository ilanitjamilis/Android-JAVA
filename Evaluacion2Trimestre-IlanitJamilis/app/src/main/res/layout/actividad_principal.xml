<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    tools:context="com.example.ilanitjamilis.evaluacion2trimestre_ilanitjamilis.ActividadPrincipal">

    <Button
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="DATOS"
        android:onClick="irActividadDatos"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="LISTA"
        android:onClick="irActividadLista"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        android:text="CAMBIOS"
        android:onClick="irActividadCambios"/>

</LinearLayout>
